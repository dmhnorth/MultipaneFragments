<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:animateLayoutChanges="true"
    tools:context=".MainActivity">

<fragment
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_panel"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    class="com.dave.multipanefragments.MainPanelFragment"
    tools:layout="@layout/fragment_main_panel" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/side_panel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        class="com.dave.multipanefragments.SidePanelFragment"
        tools:layout="@layout/fragment_side_panel" />

</RelativeLayout>
